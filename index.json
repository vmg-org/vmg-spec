{
  "swagger": 2.0,
  "info": {
    "description": "API specification for VMG project",
    "version": "1.0.0",
    "title": "VMG",
    "termsOfService": "",
    "contact": {
      "name": "vidmerg@gmail.com"
    },
    "license": {
      "name": "Apache 2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
    }
  },
  "host": "localhost:3000",
  "basePath": "/api",
  "schemes": ["http", "https"],
  "paths": {
    "/1000": {
      "get": {
        "operationId": "getListOfAuthIssuer",
        "tags": ["auth_issuer"],
        "summary": "Get auth providers, include social profiles",
        "parameters": [],
        "responses": {
          "200": {
            "description": "Success",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/auth_issuer"
              }
            }
          }
        }
      }
    },
    "/1001": {
      "get": {
        "operationId": "getListOfMovieTemplate",
        "tags": ["movie_template"],
        "summary": "Get all movie templates",
        "parameters": [],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/movie_template"
              }
            }
          }
        },
        "security": {}
      }
    },
    "/2000": {
      "post": {
        "operationId": "postMovieTemplate",
        "tags": ["movie_template"],
        "summary": "Create a template for a movie",
        "parameters": [{
          "in": "body",
          "name": "body",
          "description": "Data for a movie template",
          "schema": {
            "$ref": "$/definitions/movie_template"
          },
          "required": true
        }],
        "responses": {
          "201": {
            "description": "successful operation",
            "schema": {
              "$ref": "#/definitions/movie_template"
            }
          },
          "400": {
            "description": "Bad request"
          }
        },
        "security": {}
      }
    }
  },
  "definitions": {
    "movie_template": {
      "properties": {
        "id": {
          "type": "integer",
          "description": "Id of movie template",
          "required": true
        },
        "name": {
          "type": "string",
          "description": "Name of movie (template)",
          "required": true,
          "maxLength": 255,
          "minLength": 3
        },
        "duration_of_episodes": {
          "type": "integer",
          "description": "Duration of each episode",
          "required": true
        },
        "preview_img_url": {
          "type": "string",
          "description": "Preview of the movie",
          "required": true,
          "maxLength": 2000
        },
        "created": {
          "type": "integer",
          "description": "When the template is created, unix timestamp",
          "required": true
        },
        "finished": {
          "type": "integer",
          "description": "When the template is closed, unix timestamp",
          "required": true
        }
      }
    },
    "episode_template": {
      "primaryKey": "id",
      "properties": {
        "id": {
          "type": "integer",
          "description": "Id of a template of an episode",
          "required": true
        },
        "name": {
          "type": "string",
          "description": "Name of an episode",
          "required": true,
          "maxLength": 255,
          "minLength": 5
        },
        "story": {
          "type": "string",
          "description": "Story of an episode",
          "required": true,
          "maxLength": 400,
          "minLength": 100
        },
        "conds": {
          "type": "string",
          "description": "Conditions, required for snapping this episode",
          "required": true,
          "maxLength": 255
        },
        "order_in_movie": {
          "type": "integer",
          "description": "Sequential order in a movie",
          "required": true
        },
        "guide_photo_url": {
          "type": "string",
          "description": "A photo described this episode",
          "required": true,
          "maxLength": 2000
        },
        "id_of_movie_template": {
          "type": "integer",
          "description": "Id of a parent",
          "required": true,
          "zref": {
            "mdl": "movie_template",
            "fld": "id",
            "del": "cascade"
          }
        }
      }
    },
    "auth_issuer": {
      "primaryKey": "id",
      "properties": {
        "id": {
          "type": "string",
          "required": true,
          "maxLength": 10,
          "description": "Id of auth issuer, like goog or fb"
        },
        "name": {
          "type": "string",
          "required": true,
          "maxLength": 50,
          "description": "Display name of an issuer, like Google or Facebook"
        },
        "url": {
          "type": "string",
          "required": true,
          "maxLength": 255,
          "description": "Main url of an issuer"
        },
        "social_profile_arr": {
          "type": "array",
          "items": {
            "$ref": "social_profile"
          }
        }
      }
    },
    "social_profile": {
      "primaryKey": "id",
      "properties": {
        "id": {
          "type": "string",
          "required": true,
          "maxLength": 8000,
          "description": "Id of a social profiles, usually iss_snid"
        }
      }
    }
  }
}
